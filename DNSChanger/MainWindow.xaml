<Window x:Class="DnsChanger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DNS Changer" Width="420" Height="380"
        Background="#111111" Foreground="#EEEEEE"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Manual DNS Add -->
        <StackPanel Orientation="Vertical" Margin="0 0 0 20">
            <TextBlock Text="Primary DNS:"/>
            <TextBox x:Name="PrimaryBox" Margin="0 5 0 10" Background="#222" Foreground="White"/>

            <TextBlock Text="Secondary DNS:"/>
            <TextBox x:Name="SecondaryBox" Margin="0 5 0 10" Background="#222" Foreground="White"/>

            <Button Content="Add DNS" Click="AddDns_Click"
                    Background="#333" Foreground="White" Padding="6"/>
        </StackPanel>

        <!-- DNS List -->
        <GroupBox Header="DNS List" Grid.Row="1" Margin="0 10 0 10" Background="#111">
            <ListBox x:Name="DnsList" Background="#222" Foreground="White"/>
        </GroupBox>

        <!-- Apply Button -->
        <Button Grid.Row="3" Content="Apply Selected DNS"
                Background="#4CAF50" Foreground="White"
                Padding="10" Click="ApplyDns_Click"/>
    </Grid>
</Window>
